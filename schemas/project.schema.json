{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Project Scope Definition",
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": {
          "type": "array",
          "items": { "type": "string" }
        },
        "out_of_scope": {
          "type": "array",
          "items": { "type": "string" }
        },
        "enforcement": {
          "type": "string",
          "enum": ["off", "warn", "block"],
          "default": "warn"
        }
      }
    }
  }
}
